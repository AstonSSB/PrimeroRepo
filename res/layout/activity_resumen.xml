<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hbjhbjh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fono"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.tarea.u1.resumen.ResumenActivity" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:columnCount="1" >

        <TextView
            android:id="@+id/textView1"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="Seleccione Cliente" />

        <Spinner
            android:id="@+id/ls_resumen2"
            android:layout_height="42dp"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_gravity="left"
            android:text="Lista Total de Compras" />

        <Spinner
            android:id="@+id/ls_compras"
            android:layout_height="44dp"
            android:layout_gravity="fill_horizontal|fill_vertical" />

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="left"
            android:text="Productos entregados segun boleta seleccionada" />

        <Spinner
            android:id="@+id/ls_entregados"
            android:layout_height="42dp"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_gravity="left"
            android:text="productos no entregados segun compra" />

        <Spinner
            android:id="@+id/ls_no_entregados"
            android:layout_height="44dp"
            android:layout_gravity="fill_horizontal|fill_vertical" />

        <TextView
            android:id="@+id/textView5"
            android:layout_gravity="left"
            android:text="Total Productos Pedidos Realizados por cliente (general)" />

        <EditText
            android:id="@+id/txt_pedidos"
            android:layout_gravity="fill_horizontal"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView6"
            android:layout_gravity="left"
            android:text="Total productos no entregados(General)" />

        <EditText
            android:id="@+id/txt_total_no_entregados"
            android:layout_gravity="fill_horizontal"
            android:ems="10" />

    </GridLayout>

</RelativeLayout>