<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fono"
    android:gravity="fill_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.tarea.u1.registropedidos.RelacionActivity" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="396dp"
        android:columnCount="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_row="0"
            android:text="NÂ° de Compra : " />

        <EditText
            android:id="@+id/txt_numero"
            android:layout_width="189dp"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:ems="10" />

        <TextView
            android:id="@+id/textView2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="Seleccione Cliente :" />

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="Seleccione Producto" />

        <Spinner
            android:id="@+id/ls_verproducto"
            android:layout_width="109dp"
            android:layout_height="36dp"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/txt_precio"
            android:layout_width="182dp"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="7"
            android:ems="10" />

        <TextView
            android:id="@+id/textView5"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="7"
            android:text="Precio Unitario : " />

        <Spinner
            android:id="@+id/ls_cliente"
            android:layout_width="119dp"
            android:layout_height="36dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="8"
            android:text="Seleccione Fecha entrega :" />

        <TextView
            android:id="@+id/textView4"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="6"
            android:text="Cantidad :" />

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="11" />

        <EditText
            android:id="@+id/txt_cantidad"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="6"
            android:ems="10" />

        <Button
            android:id="@+id/btn_ingresar"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_row="11"
            android:text="Agregar productos" />

    </GridLayout>

</LinearLayout>
